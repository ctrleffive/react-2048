{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "command": "BROWSER=none yarn start",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false
      },
      "problemMatcher": {
        "pattern": [
          {
            "regexp": "!!!DO NOT MATCH ME!!!",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": false,
          "beginsPattern": "^..+$",
          "endsPattern": "^..+$"
        }
      },
      "label": "react"
    }
  ]
}
